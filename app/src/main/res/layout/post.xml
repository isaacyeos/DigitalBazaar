<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="16dp"
        android:id="@+id/postTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/postPrice"
        android:layout_below="@+id/postTitle"
        android:layout_alignLeft="@+id/postTitle"
        android:layout_alignStart="@+id/postTitle" />

    <TextView
        android:text="ImageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/postImageText"
        android:layout_below="@+id/postPrice"
        android:layout_alignLeft="@+id/postPrice"
        android:layout_alignStart="@+id/postPrice" />
</RelativeLayout>