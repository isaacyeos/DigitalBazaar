<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="16dp"
        android:id="@+id/postTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/postPrice"
        android:layout_below="@+id/postTitle"
        android:layout_alignLeft="@+id/postTitle"
        android:layout_alignStart="@+id/postTitle" />
    <TextView
        android:text="DescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/postDescription"
        android:layout_below="@+id/postPrice"
        android:layout_alignLeft="@+id/postPrice"
        android:layout_alignStart="@+id/postPrice" />
    <TextView
        android:text="UserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/postUserId"
        android:layout_below="@+id/postDescription"
        android:layout_alignLeft="@+id/postDescription"
        android:layout_alignStart="@+id/postDescription" />

    <Button
        android:text="Message"
        android:layout_width="90dp"
        android:layout_height="52dp"
        android:id="@+id/post_description"
        android:onClick="clickButtonGoToMessages"
        android:backgroundTint="@android:color/holo_orange_light"
        android:layout_weight="0.05"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_alignBaseline="@+id/setting"
        android:layout_alignBottom="@+id/setting"
        android:layout_toRightOf="@+id/setting"
        android:layout_toEndOf="@+id/setting"/>

    <Button
        android:text="Map"
        android:layout_width="90dp"
        android:layout_height="52dp"
        android:id="@+id/setting"
        android:onClick="clickButtonGoToMaps"
        android:backgroundTint="@android:color/holo_green_light"
        android:layout_weight="0.05"
        android:layout_alignBaseline="@+id/Posting"
        android:layout_alignBottom="@+id/Posting"
    android:layout_centerHorizontal="true"/>

    <ImageView
        android:text="Image"
        android:layout_width="260dp"
        android:layout_height="150dp"
        android:id="@+id/postImageText"
        android:layout_below="@+id/postUserId"
        android:layout_toRightOf="@+id/postTitle"
        android:layout_toEndOf="@+id/postTitle"/>

    <Button
        android:text="Buy"
        android:layout_width="90dp"
        android:layout_height="52dp"
        android:id="@+id/Posting"
        android:onClick="clickButtonGoToPosting"
        android:backgroundTint="@android:color/holo_purple"
        android:layout_weight="0.05"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/postImageText"
        android:layout_alignLeft="@+id/postDescription"
        android:layout_alignStart="@+id/postDescription"/>


</RelativeLayout>